{
    "parser": "babel-eslint",
    "rules": {
        "strict": 0,
        "indent": [
            2,
            4
        ],
        "quotes": [
            2,
            "single"
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "semi": [
            2,
            "always"
        ],
        "no-unused-vars": [
            0,
            {
                "vars": "local",
                "args": "after-used"
            }
        ]
    },
    "env": {
        "es6": true,
        "node": true,
        "browser": false
    },
    "extends": "eslint:recommended"
}
